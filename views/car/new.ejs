<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Car</h1>
    <div class="col-6 offset-3">
        <form action="/car/new" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="plate_num">Plate Number</label>
                <input class="form-control" type="text" id="plate_num" name="car[plate_num]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="car[description]"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="max_seats">Maximum Capacity(# of Seats)</label>
                <div class="input-group">
                    <span class="input-group-text" id="max_seats-label">$</span>
                    <input type="text" class="form-control" id="max_seats" placeholder="1" aria-label="max_seats"
                        aria-describedby="max_seats-label" name="car[max_seats]" required>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add car</button>
            </div>
        </form>
    </div>
</div>