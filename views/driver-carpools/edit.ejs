<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Carpool</h1>
    <div class="col-6 offset-3">
        <form action="/driver/<%=carpool.driver_username%>/carpools/<%=carpool.carpool_id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="time">Time</label>
                <input class="form-control" type="text" id="time" name="carpool[time]"
                    value="<%=carpool.time %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="departure_city">Departure City</label>
                <input class="form-control" type="text" id="departure_city" name="carpool[departure_city]"
                    value="<%=carpool.departure_city %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="destination_city">Destination City</label>
                <input class="form-control" type="text" id="destination_city" name="carpool[destination_city]"
                    value="<%=carpool.destination_city %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="carpool[price]" value="<%=carpool.price %>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="car_plate">Plate Number</label>
                <textarea class="form-control" type="text" id="car_plate" name="carpool[car_plate]"
                    required><%= carpool.car_plate%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="availability">Availability</label>
                <textarea class="form-control" type="text" id="availability" name="carpool[availability]"
                    required><%= carpool.availability%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Carpool</button>
            </div>
        </form>
        <a href="/driver/<%= carpool.driver_username%>/carpools/<%= carpool.carpool_id%>">Back To Carpool</a>

    </div>
</div>