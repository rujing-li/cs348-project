<% layout('layouts/boilerplate')%>

<h1>All Carpools</h1>
<% for (let carpool of carpools){%>
<div class="card" mb-3>
    <div class="row">
        <!-- <div class="col-md-4"> -->
            <!-- <img class="img-fluid" alt="" src="<%=carpool.image%>"> -->
        <!-- </div> -->
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= carpool.time %> </h5>
                <p class="card-text">Driver: <%= carpool.driver_username %></p>
                <p class="card-text">
                    <small class="text-muted">From: <%= carpool.departure_city%></small>
                </p>
                <p class="card-text">
                    <small class="text-muted">To: <%= carpool.destination_city%></small>
                </p>
                <a class="btn btn-primary" href="/allcarpools/<%=carpool.carpool_id%>">Book at $<%=carpool.price%></a>
            </div>
        </div>
    </div>
</div>
<% }%>