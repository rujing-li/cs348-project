<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit your profile</h1>
    <div class="col-6 offset-3">
      <form action="/user/<%=username%>?_method=PUT" method="POST" novalidate class="validated-form">
          <div class="mb-3">
            <label class="form-label" for="username">New Password</label>
            <input class="form-control" type="text" id="username" name="user[newpwd]" required>
            <div class="valid-feedback">
                Looks good!
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="username">Legal Name</label>
            <input class="form-control" type="text" id="username" name="user[legal_name]" required>
            <div class="valid-feedback">
                Looks good!
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="username">Phone Number</label>
            <input class="form-control" type="text" id="username" name="user[phone_number]" required>
            <div class="valid-feedback">
                Looks good!
            </div>
          </div>
          <input type="submit" name="action" value="Update">
        </form>
    </div>
</div>