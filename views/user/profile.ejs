<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= user.username%></h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Legal Name: <%= user.legal_name%></li>
                <li class="list-group-item">Phone Number: <%= user.phone_num%></li>
            </ul>
            <div class="card-body">
                <a class="btn btn-primary" href="/user/<%= user.username%>/edit">Edit</a>
            </div>
        </div>
    </div>
</div>