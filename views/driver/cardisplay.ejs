<% layout('layouts/boilerplate')%>

<h1>Your Cars</h1>
<% for (let car of cars){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">Plate Number: <%= car.plate_num %> </h5>
                <p class="card-text">Description: <%= car.description %></p>
                <p class="card-text">Max Seats: <%= car.max_seats %></p>
            </div>
        </div>
    </div>
</div>
<% }%>
<div>
    <a class="btn btn-primary" href="/car/new">Add New Car</a>
</div>